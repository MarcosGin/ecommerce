{% extends 'layout.twig' %}

{% block container %}
    <div class="containerCentral">
        <div class="products-cont">
            <div class="sidebar right">
                <div class="sidebar-tittle">
                    <span>Categories</span>
                </div>
                <ul class="sidebar-menu">
                    <li class="active">
                        <div class="row"><span class="icon"><i class="fa fa-star-o"></i></span><a href="{{ 'products' | url }}">All</a></div>
                    </li>

                    {% for category in categories %}
                    <li class="">
                        <div class="row">
                            <span class="icon"><i class="fa {{ category.icon }}"></i></span>
                            <a href="{{ ('products/search/' ~ category.id) | url}}">{{ category.name }}</a>
                            </div>
                        <ul class="marks">
                            {% for mark in category.marks %}
                                <li><a href="{{ ('products/search/' ~ category.id ~ '/' ~ mark.id) | url }}">{{ mark.name }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>

                    {% endfor %}
                </ul>
            </div>
            <div class="list-products left">
                    {% for product in products %}
                        <div class="row">
                            <a href="{{ ('products/profile/' ~ product.nombre) | url }}">
                                <div class="img">
                                    <img src="{{  (product.carpet ~ '/' ~ product.portada)  | url_image }}" alt="img" title="{{ product.nombre }}">
                                </div>
                            </a>

                            <div class="data">
                                <div class="tittle">
                                    <a href="{{ ('products/profile/' ~ product.nombre) | url }}"><span>{{ product.nombre }}</span></a>
                                </div>
                                <div class="price offer">
                                        <span class="base">$ {{ product.precio }}</span>
                                        <span class="with-offer">$ {{ product.precio}}</span>
                                        <span class="value-offer">14 % OFF</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}